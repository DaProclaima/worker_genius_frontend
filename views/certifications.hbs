<script>

  // init Isotope
  $('.grid').isotope({
    itemSelector: '.grid-item',
    layoutMode: 'fitRows'
  });

  $('.dropdown-item').click(function() {
    $('.dropdown-item').removeClass('item-active');
    $(this).addClass('item-active');

    var selector = $(this).attr('data-filter');
    $('.grid').isotope({
      filter: selector
    });
    return false;
  });


</script>
