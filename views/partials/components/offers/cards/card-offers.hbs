<div class="grid-item {{jobOffer.contract_type}}" id="{{jobOffer.id}}">
  <div class="card card_offers shadow sidebarCollapse">
    <img class="card-img-top card-img-offers" src="public/images/logo-text.png" alt="Card image cap">
    <div class="card-block">
      <h4 class="card-title">{{jobOffer.title}}</h4>
      <p class="card-text">
        Lieu : <span>{{jobOffer.city_name}}</span>
        <span><i class="fas fa-map-marker-alt place-icon-color-offers" aria-hidden="true"></i></span>
      </p>
      <p class="card-text">
        Contrats : <span>{{jobOffer.contract_type}}</span>
        <span><i class="fas fa-file-signature contract-icon-color-offers" aria-hidden="true"></i></span>
      </p>
    </div>
<!--    <div class="card-badge danger_badge_offers">-->
<!--      <span><i class="fas fa-exclamation"></i></span>-->
<!--    </div>-->
    <div class="card-badge success_badge_offers"><span><i class="fas fa-check"></i></span></div>
  </div>
</div>
